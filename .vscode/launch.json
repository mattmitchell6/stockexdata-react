  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },



    {
      "type": "node",
      "request": "launch",
      "name": "Launch via npm",
      "url": "http://localhost:8080",
      "webRoot": "${workspaceFolder}",
      "runtimeArgs": ["run-script", "debug"]
    }
  ]
}